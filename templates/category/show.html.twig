{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% if is_granted('ROLE_SUPER') %}
    <div class="d-flex justify-content-center">
        <a href="{{ path('category_new')}}" class="btn btn-success mr-2">Add a New Category</a>

        <a href="{{ path('category_index') }}" class="btn btn-primary mr-2">Back to list</a>

        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-warning mr-2">Edit Category</a>

        <a href="{{ path('category_delete', {'id': category.id}) }}" class="btn btn-danger">Delete Category</a>
    </div>
{% endif %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
