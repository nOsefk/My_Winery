{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center mt-3">
    <h1 class="text-danger">Wines</h1>
    </div>
    {% if is_granted('ROLE_SUPER') %}
    <div class="d-flex justify-content-center">
    <a href="{{ path('product_new')}}" class="btn btn-success">Add a New Product</a>
    </div>
    {% endif %}
    <div class="d-flex mt-3 ml-5">
    <div class="card-columns">
    {% for product in products %}

        <div class="card bg-light border-danger" style="width: 30rem; height: 35rem">
                <div class="card-body">
                    <div class="card-header bg-light text-center"><a
                                href="{{ path('product_show', {'id': product.id}) }}">{{ product.name }}</a>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                    <ul class="list-group list-group-flush text-left">
                        <li class="list-group-item bg-light">HTVA : {{ product.priceHTVA }} €</li>
                        <li class="list-group-item bg-light">TVAC ({{ product.tva *100 }}%)
                            : {{ product.priceHTVA + (product.priceHTVA * product.tva) }} €
                        </li>
                        <li class="list-group-item bg-light">Domain : {{ product.domain }}</li>
                        <li class="list-group-item bg-light">Country : {{ product.region.country }}</li>
                        <li class="list-group-item bg-light">Region : <a
                                    href="{{ path('region_show', {'id': product.region.id}) }}">{{ product.region.name }}</a>
                        </li>
                        <li class="list-group-item bg-light">Quantity left : {{ product.quantity }}</li>
                    </ul>
                        <img class="card-img-top miniature mt-2 mb-2" src="{{ asset("images/products/"~product.image) }}"
                             alt="{{ product.name }}"/>
                    </div>
                    <div class="card-footer text-center">
                    <a href="{{ path('add_to_cart', {'id' : app.user.lastCart.id, 'product' : product.id}) }}"
                       class="btn btn-primary"><i class="bi bi-cart-plus-fill"></i></a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                    {% endif %}
                    {% if is_granted('ROLE_SUPER') %}
                        <a href="{{ path('product_delete', {'id': product.id}) }}" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                    {% endif %}
                    </div>
                </div>
            </div>

    {% else %}
        <tr>
            <td colspan="7">no records found</td>
        </tr>
    {% endfor %}
    </div>
    </div>
{% endblock %}
